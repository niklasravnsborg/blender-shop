doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		title.
			{% if wp_title %}
				{{ wp_title }} - {{ site.name }}
			{% else %}
				{{ site.name }}
			{% endif %}
		meta(name="description", content="{{ site.description }}")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		
		link(rel="stylesheet", href="{{ theme.link }}/assets/css/main.css")
	body
		| <!--[if lt IE 8]><p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p><![endif]-->
		include /templates/sections/header

		| {% if wc_notices %}
		| {% for wc_notice in wc_notices.success %}
		.notice.notice--success
			.container {{ wc_notice }}
		| {% endfor %}
		| {% endif %}

		| {% block content %}
		include /templates/sections/hero
		include /templates/sections/categories-overview
		include /templates/sections/payment
		| {% endblock %}
		include /templates/sections/footer
		
